<script>
    let activeSubMenu = null; // För att hålla reda på den aktiva undermenyn

    function toggleSubMenu(event) {
        const subMenu = event.target.nextElementSibling;

        // Döljer den aktiva undermenyn om den är öppen
        if (activeSubMenu && activeSubMenu !== subMenu) {
            activeSubMenu.style.display = "none";
        }

        // Växlar synlighet på den valda undermenyn
        subMenu.style.display = subMenu.style.display === "none" || !subMenu.style.display ? "block" : "none";

        // Uppdaterar den aktiva undermenyn
        activeSubMenu = subMenu.style.display === "block" ? subMenu : null;
    }
</script>
